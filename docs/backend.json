{
  "entities": {
    "setting": {
      "title": "Setting",
      "description": "Generation rules for accounts.",
      "type": "object",
      "properties": {
        "usernameFormat": {
          "type": "string"
        },
        "passwordFormat": {
          "type": "string"
        },
        "emailDomain": {
          "type": "string"
        },
        "allowManualDate": {
          "type": "boolean"
        },
        "requiredFields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "usernameFormat",
        "passwordFormat",
        "emailDomain",
        "allowManualDate",
        "requiredFields"
      ]
    },
    "account": {
      "title": "Account",
      "description": "A generated user account.",
      "type": "object",
      "properties": {
        "displayDate": {
          "type": "string",
          "format": "date"
        },
        "firstname": {
          "type": "string"
        },
        "middlename": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "lead": {
          "type": "number"
        },
        "leg": {
          "type": "number"
        },
        "sucAcc": {
          "type": "number"
        },
        "ref": {
          "type": "number"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "displayDate",
        "firstname",
        "lastname",
        "lead",
        "leg",
        "sucAcc",
        "ref",
        "username",
        "password",
        "email",
        "phone",
        "createdAt"
      ]
    },
    "admin": {
      "title": "Admin",
      "description": "An administrator user.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "role": {
          "type": "string",
          "enum": [
            "admin",
            "superadmin"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "email",
        "role",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/settings/{settingId}": {
      "schema": {
        "$ref": "#/entities/setting"
      },
      "description": "Stores documents for generation rules. The main document is 'rules'."
    },
    "/accounts/{accountId}": {
      "schema": {
        "$ref": "#/entities/account"
      },
      "description": "Stores all generated user accounts."
    },
    "/admins/{adminId}": {
      "schema": {
        "$ref": "#/entities/admin"
      },
      "description": "Stores administrator users, planned for future use with Firebase Authentication."
    }
  }
}
